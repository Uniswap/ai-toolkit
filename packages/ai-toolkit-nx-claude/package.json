{
  "name": "@uniswap/ai-toolkit-nx-claude",
  "version": "0.4.1-next.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ai-toolkit-nx-claude": "./dist/cli-generator.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "main": "packages/ai-toolkit-nx-claude/src/index.ts",
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.lib.json",
          "rootDir": "packages/ai-toolkit-nx-claude/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./packages/ai-toolkit-nx-claude/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./packages/ai-toolkit-nx-claude/src",
              "glob": "**/*.d.ts",
              "output": "."
            },
            {
              "input": "./packages/ai-toolkit-nx-claude/src",
              "glob": "**/schema.json",
              "output": "."
            },
            {
              "input": "./packages/commands/agnostic/src",
              "glob": "**/*.md",
              "output": "content/commands/agnostic"
            },
            {
              "input": "./packages/agents/agnostic/src",
              "glob": "**/*.md",
              "output": "content/agents/agnostic"
            }
          ]
        },
        "dependsOn": [
          {
            "projects": [
              "@ai-toolkit/agents-agnostic"
            ],
            "target": "build"
          },
          {
            "projects": [
              "@ai-toolkit/commands-agnostic"
            ],
            "target": "build"
          }
        ]
      },
      "postbuild": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "chmod +x packages/ai-toolkit-nx-claude/dist/cli-generator.js",
            "cp packages/ai-toolkit-nx-claude/src/generators/init/setup-github-packages.sh packages/ai-toolkit-nx-claude/dist/generators/init/setup-github-packages.sh 2>/dev/null || true",
            "chmod +x packages/ai-toolkit-nx-claude/dist/generators/init/setup-github-packages.sh 2>/dev/null || true"
          ],
          "parallel": false
        },
        "dependsOn": [
          "build",
          {
            "projects": [
              "@ai-toolkit/agents-agnostic"
            ],
            "target": "build"
          },
          {
            "projects": [
              "@ai-toolkit/commands-agnostic"
            ],
            "target": "build"
          }
        ]
      },
      "nx-claude:exec": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node packages/ai-toolkit-nx-claude/dist/cli-generator.js"
        },
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "generators": "./generators.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniswap/ai-toolkit.git",
    "directory": "packages/ai-toolkit-nx-claude"
  },
  "dependencies": {
    "@nx/devkit": "*",
    "enquirer": "*"
  },
  "devDependencies": {
    "@ai-toolkit/commands-agnostic": "workspace:*",
    "@ai-toolkit/agents-agnostic": "workspace:*"
  }
}
