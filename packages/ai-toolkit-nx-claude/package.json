{
  "name": "@uniswap/ai-toolkit-nx-claude",
  "version": "0.5.29",
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Uniswap/ai-toolkit.git",
    "directory": "packages/ai-toolkit-nx-claude"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ai-toolkit-nx-claude": "dist/cli-generator.cjs",
    "claude-plus": "dist/scripts/claude-plus/index.cjs"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@ai-toolkit/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "nx": {
    "targets": {
      "bundle": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "dependsOn": [
          "generate-types"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "main": "packages/ai-toolkit-nx-claude/src/cli-generator.ts",
          "additionalEntryPoints": [
            "packages/ai-toolkit-nx-claude/src/index.ts",
            "packages/ai-toolkit-nx-claude/src/scripts/claude-plus/index.ts",
            "packages/ai-toolkit-nx-claude/src/generators/addons/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/hooks/generator.ts"
          ],
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.lib.json",
          "bundle": true,
          "platform": "node",
          "format": [
            "cjs"
          ],
          "external": [
            "@nx/devkit",
            "nx",
            "nx/package.json",
            "ts-node",
            "ts-node/esm",
            "@swc/wasm",
            "@swc/core",
            "@swc/core-*",
            "@nx/nx-*",
            "@angular-devkit/*",
            "rxjs",
            "rxjs/*",
            "jiti",
            "jiti/package.json"
          ],
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./packages/ai-toolkit-nx-claude/src",
              "glob": "**/!(*.ts)",
              "output": "."
            }
          ]
        }
      },
      "generate-types": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.types.json",
          "main": "packages/ai-toolkit-nx-claude/src/index.ts",
          "assets": []
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "outputs": [
          "{workspaceRoot}/packages/ai-toolkit-nx-claude/dist"
        ],
        "options": {
          "commands": [
            "node packages/ai-toolkit-nx-claude/scripts/update-entrypoints.js",
            "nx run @uniswap/ai-toolkit-nx-claude:bundle"
          ],
          "parallel": false
        }
      },
      "postbuild": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "chmod +x packages/ai-toolkit-nx-claude/dist/cli-generator.cjs",
            "chmod +x packages/ai-toolkit-nx-claude/dist/scripts/claude-plus/index.cjs"
          ],
          "parallel": true
        },
        "dependsOn": [
          "build"
        ]
      },
      "nx-claude:exec": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node packages/ai-toolkit-nx-claude/dist/cli-generator.cjs"
        },
        "dependsOn": [
          "build"
        ]
      },
      "claude-plus:exec": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node packages/ai-toolkit-nx-claude/dist/scripts/claude-plus/index.cjs"
        },
        "dependsOn": [
          "build"
        ]
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{workspaceRoot}/test-output/jest/packages/ai-toolkit-nx-claude"
        ],
        "options": {
          "jestConfig": "packages/ai-toolkit-nx-claude/jest.config.ts",
          "passWithNoTests": true
        }
      }
    }
  },
  "generators": "./generators.json",
  "dependencies": {
    "@nx/devkit": "*",
    "enquirer": "*"
  }
}
