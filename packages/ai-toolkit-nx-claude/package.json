{
  "name": "@uniswap/ai-toolkit-nx-claude",
  "version": "0.4.2",
  "main": "./dist/index.cjs",
  "module": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ai-toolkit-nx-claude": "./dist/cli-generator.cjs"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "nx": {
    "targets": {
      "bundle": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "dependsOn": [
          "types"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "main": "packages/ai-toolkit-nx-claude/src/cli-generator.ts",
          "additionalEntryPoints": [
            "packages/ai-toolkit-nx-claude/src/index.ts",
            "packages/ai-toolkit-nx-claude/src/generators/add-agent/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/add-command/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/addons/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/hooks/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/init/generator.ts",
            "packages/ai-toolkit-nx-claude/src/generators/setup-registry-proxy/generator.ts"
          ],
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.lib.json",
          "bundle": true,
          "platform": "node",
          "format": [
            "cjs"
          ],
          "external": [
            "@nx/devkit",
            "nx",
            "nx/package.json",
            "ts-node",
            "ts-node/esm",
            "@swc/wasm",
            "@swc/core",
            "@swc/core-*",
            "@nx/nx-*",
            "@angular-devkit/*",
            "rxjs",
            "rxjs/*",
            "jiti",
            "jiti/package.json"
          ],
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./packages/ai-toolkit-nx-claude/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./packages/commands/agnostic/src",
              "glob": "**/*.md",
              "output": "content/commands/agnostic"
            },
            {
              "input": "./packages/agents/agnostic/src",
              "glob": "**/*.md",
              "output": "content/agents/agnostic"
            }
          ]
        }
      },
      "types": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.types.json",
          "main": "packages/ai-toolkit-nx-claude/src/index.ts",
          "assets": []
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "outputs": [
          "{workspaceRoot}/packages/ai-toolkit-nx-claude/dist"
        ],
        "options": {
          "commands": [
            "node packages/ai-toolkit-nx-claude/scripts/update-entrypoints.js",
            "nx run @uniswap/ai-toolkit-nx-claude:bundle",
            "chmod +x packages/ai-toolkit-nx-claude/dist/cli-generator.cjs"
          ],
          "parallel": false
        },
        "dependsOn": [
          {
            "projects": [
              "@ai-toolkit/agents-agnostic"
            ],
            "target": "build"
          },
          {
            "projects": [
              "@ai-toolkit/commands-agnostic"
            ],
            "target": "build"
          }
        ]
      },
      "postbuild": {
        "executor": "nx:run-commands",
        "options": {
          "command": "chmod +x packages/ai-toolkit-nx-claude/dist/cli-generator.cjs"
        },
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "generators": "./generators.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniswap/ai-toolkit.git",
    "directory": "packages/ai-toolkit-nx-claude"
  },
  "dependencies": {
    "@nx/devkit": "*",
    "enquirer": "*"
  },
  "devDependencies": {
    "@ai-toolkit/commands-agnostic": "workspace:*",
    "@ai-toolkit/agents-agnostic": "workspace:*"
  }
}
