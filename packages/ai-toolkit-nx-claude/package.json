{
  "name": "@uniswap/ai-toolkit-nx-claude",
  "version": "0.4.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ai-toolkit-nx-claude": "./dist/cli-generator.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "nx": {
    "targets": {
      "bundle": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "deleteOutputPath": false,
          "main": "packages/ai-toolkit-nx-claude/src/index.ts",
          "additionalEntryPoints": [
            "packages/ai-toolkit-nx-claude/src/cli-generator.ts"
          ],
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.lib.json",
          "platform": "node",
          "bundle": true,
          "sourcemap": true,
          "format": [
            "cjs"
          ],
          "external": [
            "node:*"
          ],
          "assets": [
            "packages/ai-toolkit-nx-claude/README.md",
            "packages/ai-toolkit-nx-claude/generators.json",
            {
              "input": "./packages/commands/agnostic/src",
              "glob": "**/*.md",
              "output": "content/commands/agnostic"
            },
            {
              "input": "./packages/agents/agnostic/src",
              "glob": "**/*.md",
              "output": "content/agents/agnostic"
            }
          ]
        }
      },
      "compile": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/ai-toolkit-nx-claude/dist",
          "main": "packages/ai-toolkit-nx-claude/src/index.ts",
          "tsConfig": "packages/ai-toolkit-nx-claude/tsconfig.lib.json",
          "rootDir": "packages/ai-toolkit-nx-claude/src"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "outputs": [
          "{workspaceRoot}/packages/ai-toolkit-nx-claude/dist"
        ],
        "options": {
          "commands": [
            "nx run @uniswap/ai-toolkit-nx-claude:compile",
            "nx run @uniswap/ai-toolkit-nx-claude:bundle",
            "chmod +x packages/ai-toolkit-nx-claude/dist/cli-generator.js"
          ],
          "parallel": false
        }
      }
    }
  },
  "generators": "./generators.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniswap/ai-toolkit.git",
    "directory": "packages/ai-toolkit-nx-claude"
  },
  "dependencies": {
    "@nx/devkit": "*",
    "enquirer": "*"
  },
  "devDependencies": {
    "@ai-toolkit/commands-agnostic": "workspace:*",
    "@ai-toolkit/agents-agnostic": "workspace:*"
  }
}
