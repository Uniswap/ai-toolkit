{
  "$schema": "https://json-schema.org/schema",
  "$id": "SchemaForAddons",
  "title": "Addons Installation",
  "type": "object",
  "description": "Install and configure Claude Code addons including MCP servers.",
  "properties": {
    "selectionMode": {
      "type": "string",
      "description": "Selection mode for which addons to install",
      "enum": ["all", "specific"],
      "default": "all",
      "x-prompt": {
        "message": "üéØ What would you like to install?",
        "type": "list",
        "items": [
          {
            "value": "all",
            "label": "All recommended MCP servers (6 servers)"
          },
          {
            "value": "specific",
            "label": "Select specific MCP servers"
          }
        ]
      }
    },
    "addons": {
      "type": "array",
      "description": "The addons to install",
      "items": {
        "type": "string",
        "enum": [
          "slack-mcp",
          "github-mcp",
          "figma-mcp",
          "vercel-mcp",
          "aws-log-analyzer-mcp",
          "pulumi-mcp"
        ]
      },
      "prompt-when": "selectionMode === 'specific'",
      "prompt-type": "multiselect",
      "prompt-message": "üîå Select MCP servers to install"
    },
    "dashboardMode": {
      "type": "string",
      "description": "Dashboard startup mode",
      "enum": ["always", "manual"],
      "default": "always",
      "prompt-message": "üìä When should the spec-workflow dashboard start?",
      "prompt-type": "select",
      "prompt-items": [
        { "value": "always", "label": "Always (auto-start on Claude launch)" },
        { "value": "manual", "label": "Manual (start via command only)" }
      ]
    },
    "port": {
      "type": "number",
      "description": "Dashboard port (default: auto)",
      "default": 0,
      "prompt-message": "üîå Dashboard port (0 for auto)"
    },
    "force": {
      "type": "boolean",
      "description": "Force installation even if already exists",
      "default": false
    },
    "skipVerification": {
      "type": "boolean",
      "description": "Skip installation verification",
      "default": false
    },
    "projectPath": {
      "type": "string",
      "description": "Path to the project where spec-workflow should be installed",
      "x-skip-prompt": true
    },
    "dry": {
      "type": "boolean",
      "description": "Dry run mode",
      "default": false
    },
    "installMode": {
      "type": "string",
      "description": "Installation mode from parent generator (default or custom)",
      "enum": ["default", "custom"],
      "hidden": true,
      "x-skip-prompt": true
    },
    "installationType": {
      "type": "string",
      "description": "Installation location for MCP servers",
      "enum": ["global", "local"],
      "prompt-message": "üìç Where should MCP servers be installed?",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "global",
          "label": "Global (~/.claude) - Available in all projects"
        },
        {
          "value": "local",
          "label": "Local (./.claude) - Project-specific configuration"
        }
      ]
    }
  },
  "required": []
}
