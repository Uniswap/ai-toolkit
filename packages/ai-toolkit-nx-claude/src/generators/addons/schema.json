{
  "$schema": "https://json-schema.org/schema",
  "$id": "SchemaForAddons",
  "title": "Addons Installation",
  "type": "object",
  "description": "Install and configure Claude Code addons including MCP servers.",
  "properties": {
    "installMode": {
      "type": "string",
      "description": "Installation mode",
      "enum": ["all", "specific"],
      "default": "all",
      "x-prompt": {
        "message": "ðŸŽ¯ What would you like to install?",
        "type": "list",
        "items": [
          {
            "value": "all",
            "label": "All recommended MCP servers (12 servers)"
          },
          {
            "value": "specific",
            "label": "A specific MCP server"
          }
        ]
      }
    },
    "addon": {
      "type": "string",
      "description": "The addon to install",
      "enum": [
        "spec-workflow-mcp",
        "graphite-mcp",
        "nx-mcp",
        "slack-mcp",
        "universe-mcp",
        "linear-mcp",
        "notion-mcp",
        "github-mcp",
        "figma-mcp",
        "chrome-devtools-mcp",
        "vercel-mcp",
        "supabase-mcp"
      ],
      "prompt-when": "installMode === 'specific'"
    },
    "dashboardMode": {
      "type": "string",
      "description": "Dashboard startup mode",
      "enum": ["always", "manual"],
      "default": "always",
      "prompt-message": "ðŸ“Š When should the spec-workflow dashboard start?",
      "prompt-type": "select",
      "prompt-items": [
        { "value": "always", "label": "Always (auto-start on Claude launch)" },
        { "value": "manual", "label": "Manual (start via command only)" }
      ]
    },
    "port": {
      "type": "number",
      "description": "Dashboard port (default: auto)",
      "default": 0,
      "prompt-message": "ðŸ”Œ Dashboard port (0 for auto)"
    },
    "force": {
      "type": "boolean",
      "description": "Force installation even if already exists",
      "default": false
    },
    "skipVerification": {
      "type": "boolean",
      "description": "Skip installation verification",
      "default": false
    },
    "projectPath": {
      "type": "string",
      "description": "Path to the project where spec-workflow should be installed",
      "x-skip-prompt": true
    },
    "dry": {
      "type": "boolean",
      "description": "Dry run mode",
      "default": false
    }
  },
  "required": []
}
