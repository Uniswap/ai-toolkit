{
  "$schema": "https://json-schema.org/schema",
  "$id": "Init",
  "title": "Initialize Claude Code configuration",
  "type": "object",
  "properties": {
    "installMode": {
      "type": "string",
      "description": "Installation mode (default=recommended, custom=choose components)",
      "enum": ["default", "custom"],
      "x-skip-prompt": true
    },
    "installationType": {
      "type": "string",
      "description": "Installation type (global or local)",
      "enum": ["global", "local"],
      "prompt-when": "installMode === 'custom'",
      "x-prompt": {
        "message": "üìç Installation Location Options:\n  ‚Ä¢ Global: Available to Claude Code in ALL projects on this machine\n  ‚Ä¢ Local: Available only when Claude Code is run from this specific project\n\nWould you like to install agents and commands globally or locally?",
        "type": "list",
        "items": [
          {
            "value": "global",
            "label": "Global (~/.claude) - Use anywhere on this machine"
          },
          {
            "value": "local",
            "label": "Local (./.claude) - Use only in this project"
          }
        ]
      }
    },
    "confirmLocalPath": {
      "type": "boolean",
      "description": "Confirm local installation path",
      "prompt-when": "installMode === 'custom' && installationType === 'local'"
    },
    "installCommands": {
      "type": "boolean",
      "description": "Whether to install commands",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üìù Install slash commands?",
      "prompt-type": "confirm"
    },
    "installAgents": {
      "type": "boolean",
      "description": "Whether to install agents",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "ü§ñ Install AI agents?",
      "prompt-type": "confirm"
    },
    "commands": {
      "type": "array",
      "description": "Specific commands to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installCommands === true"
    },
    "agents": {
      "type": "array",
      "description": "Specific agents to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installAgents === true"
    },
    "installHooks": {
      "type": "boolean",
      "description": "Install notification hooks (plays sound when Claude needs input)",
      "default": true,
      "always-prompt": true,
      "prompt-message": "üîî Install notification hooks? (recommended - plays sound when Claude needs input)",
      "prompt-type": "confirm"
    },
    "hooksMode": {
      "type": "string",
      "description": "Notification mode for hooks",
      "enum": ["sound", "speech", "both"],
      "default": "sound",
      "x-skip-prompt": true
    },
    "installAddons": {
      "type": "boolean",
      "description": "Install addons like spec-mcp-workflow",
      "default": false,
      "x-skip-prompt": true
    },
    "dry": {
      "type": "boolean",
      "description": "Preview installation without making changes",
      "default": false,
      "prompt-when": "installMode === 'custom'",
      "always-prompt": true,
      "prompt-message": "üëÅÔ∏è Run in dry-run mode (preview only)?",
      "prompt-type": "confirm"
    },
    "nonInteractive": {
      "type": "boolean",
      "description": "Run without prompts",
      "default": false
    },
    "force": {
      "type": "boolean",
      "description": "Overwrite existing files",
      "default": false
    }
  },
  "required": []
}
