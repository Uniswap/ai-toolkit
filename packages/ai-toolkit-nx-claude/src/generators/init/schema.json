{
  "$schema": "https://json-schema.org/schema",
  "$id": "Init",
  "title": "Initialize Claude Code configuration",
  "type": "object",
  "properties": {
    "installMode": {
      "type": "string",
      "description": "Installation mode (default=recommended, custom=choose components)",
      "enum": ["default", "custom"],
      "default": "default",
      "x-prompt": {
        "message": "üöÄ Installation Mode:\n  ‚Ä¢ Default: Quick setup with all recommended commands and agents\n  ‚Ä¢ Custom: Choose specific commands and agents to install\n\nWhich installation mode would you like?",
        "type": "list",
        "items": [
          {
            "value": "default",
            "label": "Default - Install all recommended components (recommended)"
          },
          {
            "value": "custom",
            "label": "Custom - Choose specific components"
          }
        ]
      }
    },
    "installationType": {
      "type": "string",
      "description": "Installation type (global or local)",
      "enum": ["global", "local"],
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üìç Installation Location Options:\n  ‚Ä¢ Global: Available to Claude Code in ALL projects on this machine\n  ‚Ä¢ Local: Available only when Claude Code is run from this specific project\n\nWould you like to install agents and commands globally or locally?",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "global",
          "label": "Global (~/.claude) - Use anywhere on this machine"
        },
        {
          "value": "local",
          "label": "Local (./.claude) - Use only in this project"
        }
      ]
    },
    "confirmLocalPath": {
      "type": "boolean",
      "description": "Confirm local installation path",
      "prompt-when": "installMode === 'custom' && installationType === 'local'"
    },
    "installCommands": {
      "type": "boolean",
      "description": "Whether to install commands",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üìù Install slash commands?",
      "prompt-type": "confirm"
    },
    "commandSelectionMode": {
      "type": "string",
      "description": "Whether to install all commands or select specific ones",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installCommands === true",
      "prompt-message": "üìù Select commands to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All commands"
        },
        {
          "value": "specific",
          "label": "Select specific commands"
        }
      ]
    },
    "installAgents": {
      "type": "boolean",
      "description": "Whether to install agents",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "ü§ñ Install AI agents?",
      "prompt-type": "confirm"
    },
    "agentSelectionMode": {
      "type": "string",
      "description": "Whether to install all agents or select specific ones",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installAgents === true",
      "prompt-message": "ü§ñ Select agents to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All agents"
        },
        {
          "value": "specific",
          "label": "Select specific agents"
        }
      ]
    },
    "commands": {
      "type": "array",
      "description": "Specific commands to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installCommands === true && commandSelectionMode === 'specific'"
    },
    "agents": {
      "type": "array",
      "description": "Specific agents to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installAgents === true && agentSelectionMode === 'specific'"
    },
    "installHooks": {
      "type": "boolean",
      "description": "Install notification hooks (plays sound when Claude needs input)",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üîî Install notification hooks? (recommended - plays sound when Claude needs input)",
      "prompt-type": "confirm"
    },
    "hooksMode": {
      "type": "string",
      "description": "Notification mode for hooks",
      "enum": ["sound", "speech", "both"],
      "default": "sound",
      "x-skip-prompt": true
    },
    "installAddons": {
      "type": "boolean",
      "description": "Install addons like spec-mcp-workflow",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üîå Install addons/mcps?",
      "prompt-type": "confirm"
    },
    "addonSelectionMode": {
      "type": "string",
      "description": "Whether to install all addons or select a specific one",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installAddons === true",
      "prompt-message": "üîå Select addons to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All addons"
        },
        {
          "value": "specific",
          "label": "Select specific addons"
        }
      ]
    },
    "installSkills": {
      "type": "boolean",
      "description": "Install Claude Code skills (model-invoked capabilities)",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üì¶ Install skills? (model-invoked capabilities for PDF, Excel, Jupyter, etc.)",
      "prompt-type": "confirm"
    },
    "skillSelectionMode": {
      "type": "string",
      "description": "Whether to install all skills or select specific ones",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installSkills === true",
      "prompt-message": "üì¶ Select skills to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All skills"
        },
        {
          "value": "specific",
          "label": "Select specific skills"
        }
      ]
    },
    "skills": {
      "type": "array",
      "description": "Specific skills to install",
      "items": {
        "type": "string",
        "enum": ["pdf", "xlsx", "jupyter-notebook"]
      },
      "prompt-when": "installMode === 'custom' && installSkills === true && skillSelectionMode === 'specific'",
      "prompt-type": "multiselect",
      "prompt-message": "üì¶ Select skills to install"
    },
    "dry": {
      "type": "boolean",
      "description": "Preview installation without making changes",
      "default": false,
      "prompt-when": "installMode === 'custom'",
      "always-prompt": true,
      "prompt-message": "üëÅÔ∏è Run in dry-run mode (preview only)?",
      "prompt-type": "confirm"
    },
    "nonInteractive": {
      "type": "boolean",
      "description": "Run without prompts",
      "default": false
    },
    "force": {
      "type": "boolean",
      "description": "Overwrite existing files",
      "default": false
    }
  },
  "required": []
}
