{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "types": ["node"],
    "paths": {
      "@ai-toolkit/commands-agnostic": [
        "../commands/agnostic/dist/src/index.js"
      ],
      "@ai-toolkit/agents-agnostic": ["../agents/agnostic/dist/src/index.js"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../agents/agnostic/tsconfig.lib.json"
    },
    {
      "path": "../commands/agnostic/tsconfig.lib.json"
    }
  ]
}
