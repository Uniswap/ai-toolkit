{
  "$schema": "https://json-schema.org/schema",
  "$id": "Hooks",
  "title": "Install Claude Code notification hooks",
  "type": "object",
  "properties": {
    "backup": {
      "type": "boolean",
      "description": "Backup existing hooks configuration before installation",
      "default": true,
      "always-prompt": true,
      "prompt-message": "üíæ Backup existing hooks configuration (if any)?",
      "prompt-type": "confirm"
    },
    "dry": {
      "type": "boolean",
      "description": "Preview installation without making changes",
      "default": false,
      "always-prompt": true,
      "prompt-message": "üëÅÔ∏è Run in dry-run mode (preview only)?",
      "prompt-type": "confirm"
    },
    "verbose": {
      "type": "boolean",
      "description": "Show detailed output during installation",
      "default": false,
      "always-prompt": true,
      "prompt-message": "üìù Show verbose output during installation?",
      "prompt-type": "confirm"
    },
    "force": {
      "type": "boolean",
      "description": "Skip confirmation prompts and overwrite existing configuration",
      "default": false
    }
  },
  "required": []
}
